<div class="container sale" style="height: auto !important;">
  <section id="primary" class="content-area woocommerce-area" style="height: auto !important;">
    <div class="site-welcome sale-welcome">
      WELLCOME TO VIETNAM BEAGLE CLUB
    </div>
    <main id="main" class="site-main sale-main" role="main" style="height: auto !important;">
      <header class="page-header sale-main-header">
        <h1 class="page-title">ĐANG BÁN</h1>
      </header>
      <div class="products sale-main-pack pack" style="margin-top: 50px">
        <% @packs.each do |pack| %>
          <h2 class="pack-title"><%= pack.title %></h2>
          <% pack.dogs.first(8).each do |dog| %>
            <div class="col-md-4 saleDog">
              <div class="saleDog-container">
                <div class="saleDog-container-image">
                  <a href="#">
                    <img src="https://collievn.com/wp-content/uploads/2020/02/83918331_507129810205471_1154217038542012416_n-380x380.jpg">
                    <%#= image_tag dog.photos.first&.image_url || "nopic" %>
                  </a>
                  <% if dog.sale.sale_price %>
                    <span class="product-new-label">Giảm Giá</span>
                  <% end %>
                </div>
                <div class="saleDog-container-content content">
                  <h3 class="content-title">
                    <a href="/details/<%= dog.slug %>">
                      <%= dog.name.upcase %>
                    </a>
                  </h3>
                  <div class="content-price">
                    <%= format_sale(dog.sale.price, dog.sale.sale_price) %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </main>
  </section>
  <!-- #secondary -->
</div>